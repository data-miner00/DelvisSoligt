{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "wwwroot/js/dist"
  },
  "include": ["Scripts/**/*.ts"],
  "exclude": ["node_modules", "wwwroot/js/dist", "**/*.test.ts"]
}
